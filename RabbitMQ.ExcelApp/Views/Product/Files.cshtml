@{
    ViewData["Title"] = "Files";
}

@model List<UserFile>
<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus.ToString()</td>
            <td>
                <a class="btn btn-primary @(item.FileStatus==FileStatus.Creating ? "disabled" :"")" href="~/files/@item.FilePath">Download</a>
            </td>
        </tr>
    }
</table>

